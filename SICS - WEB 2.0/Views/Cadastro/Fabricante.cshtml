@model SICS___WEB_2._0.Models.ViewModels.CadastroFabricantesViewModel

@{
    ViewBag.Title = "SICS - Cadastrar Fabricante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="featurette-divider" id="divisor">

    <h2 style="color:white"> Cadastro de Fabricantes</h2>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" id="formulario">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.NomeFabricante, htmlAttributes: new { @class = "control-label col-md-2", @id = "labelform" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeFabricante)
                @Html.ValidationMessageFor(model => model.NomeFabricante)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EnderecoFabricante, htmlAttributes: new { @class = "control-label col-md-2", @id = "labelform" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EnderecoFabricante)
                @Html.ValidationMessageFor(model => model.EnderecoFabricante)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TelefoneFabricante, htmlAttributes: new { @class = "control-label col-md-2", @id = "labelform" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TelefoneFabricante)
                @Html.ValidationMessageFor(model => model.TelefoneFabricante)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

