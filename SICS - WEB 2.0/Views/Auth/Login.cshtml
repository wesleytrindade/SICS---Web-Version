@model SICS___WEB_2._0.Models.ViewModels.LoginViewModel


<!DOCTYPE html>

<link href="@Url.Content("~/css/AuthStyle.css")" rel="stylesheet">
<link href="@Url.Content("~/css/bootstrap.css")" rel="stylesheet">
<link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">


<title> SICS - Acesso ao Sistema</title>


<body id="LoginForm">

    @if (Model != null && Model.invalidCredentials == true)
    {
        <div class="modal fade" id="invalidModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content" id="janelaModal">
                    <div class="modal-header">
                        <h5 class="modal-title" id="titulomodal">Erro</h5>
                    </div>
                    <div class="modal-body">
                        <p> Credenciais Incorretas!</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            window.onload = exibeModal();

            function exibeModal() {
                alert("Credenciais inválidas");

            }

        </script>

    }

    <div class="container">
        <div class="login-form">
            <div class="main-div">


                <div class="panel">
                    <h2>SICS - SISTEMA INTEGRADO DE CONTROLE DE SUBSTÂNCIAS</h2>
                </div>

                @using (Html.BeginForm("Login", "Auth", FormMethod.Post))

                {

                    @Html.ValidationSummary(true)

                    @Html.TextBoxFor(a => a.Username, htmlAttributes: new

               {
                   @class = "form-control",
                   @placeholder = "Login",
               })

                    @Html.ValidationMessageFor(a => a.Username, "", htmlAttributes: new { @class = "text-danger" });

                    <br />

                    @Html.PasswordFor(a => a.Password,
           htmlAttributes: new

           {
               @class = "form-control",
               @placeholder = "Senha",
           })

                    <br />

                    @Html.ValidationMessageFor(a => a.Password, "", htmlAttributes: new { @class = "text-danger" });



                    <br />
                    <button type="submit" class="btn btn-primary" id="enviar"> Entrar</button>
                }

            </div>
        </div>
    </div>
</body>
